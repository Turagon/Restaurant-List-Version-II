<div class="addRestaurant">
  <label for="new-name" class="new-restaurant"><i class="far fa-list-alt"></i>更新資料</label>
  <form action="/details/{{id}}" class=" new edit" method="POST">
    <div class="new-Name form-group row mt-2">
      <label for="new-name" class="select-label col-form-label"><i class="fas fa-utensils"></i>餐廳名稱</label>
      <div class="new-Name-sub input-column">
        <input type="text" class="form-control" id="new-name" name="name" maxlength="20" aria-describedby="help"
        placeholder="必填 長度不可超過20個字" value="{{restaurant.name}}" required>
        <small id="help" class="invalid-feedback">此欄位不可以是空白</small>
      </div>
    </div>
    <div class="new-enName form-group row mt-2">
      <label for="new-enname" class="select-label col-form-label"><i class="fab fa-amilia"></i>餐廳英文名稱</label>
      <div class="new-enName-sub input-column">
        <input type="text" class="form-control" id="new-enname" name="name_en" maxlength="30" aria-describedby="help"
        placeholder="長度不可超過30個字" value="{{restaurant.name_en}}">
      </div>
    </div>
    <div class="new-category form-group row mt-2">
      <label class="col-form-label" for="category"><i class="far fa-folder"></i>分類</label>
      <div class="new-category-sub input-column">
        <input list="categories" class="form-control" name="category" id="category" placeholder="必填..若選項沒有 可自行輸入"
        value="{{restaurant.category}}"  required>
        <small id="help" class="invalid-feedback">此欄位不可以是空白</small>
        <datalist id="categories">
          <option>台式料理</option>
          <option>中式料理</option>
          <option>日本料理</option>
          <option>法式料理</option>
          <option>義式餐廳</option>
          <option>泰式料理</option>
          <option>中東料理</option>
          <option>韓式料理</option>
          <option>越南料理</option>
          <option>印度料理</option>
          <option>火鍋燒烤</option>
          <option>咖啡簡餐</option>
          <option>麵店小吃</option>
          <option>美式</option>
          <option>酒吧</option>
        </datalist>
      </div>
    </div>
    <div class="new-address form-group row mt-2">
      <label for="new-address" class="select-label col-form-label"><i class="fas fa-map-marker-alt"></i>餐廳地址</label>
      <div class="new-address-sub input-column">
        <input type="text" class="form-control" id="new-address" name="location" maxlength="100" aria-describedby="help"
        placeholder="必填 長度不可超過100個字" value="{{restaurant.location}}" required>
        <small id="help" class="invalid-feedback">此欄位不可以是空白</small>
      </div>
    </div>
    <div class="new-phone form-group row mt-2">
      <label for="new-phone" class="select-label col-form-label"><i class="fas fa-phone"></i>餐廳電話</label>
      <div class="new-phone-sub input-column">
        <input type="text" class="form-control" id="new-phone" name="phone" maxlength="10" aria-describedby="help"
        placeholder="長度不可超過10個字" value="{{restaurant.phone}}">
      </div>
    </div>
    <div class="new-rating form-group row mt-2">
      <label class="col-form-label" for="rating"><i class="fas fa-star-half-alt"></i>評分</label>
      <div class="new-rating-sub input-column">
        <select class="form-control" id="rating" name="rating">
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
          <option value="4">4</option>
          <option value="5">5</option>
        </select>
      </div>
    </div>
    <div class="new-description row mt-3">
      <label class="col-form-label" for="new-description"><i class="far fa-comment-alt"></i>餐廳介紹</label>
      <div class="new-description-sub input-column">
        <input class="form-control" id="new-description" name="description" maxlength="500"
        placeholder="長度不可超過500個字" value="{{restaurant.description}}">
      </div>
    </div>
    <div class="new-photo form-group row mt-2">
      <label for="photo-link" class="select-label col-form-label"><i class="far fa-images"></i>照片連結</label>
      <div class="new-photo-sub input-column">
        <input type="text" class="form-control" id="photo-link" name="image" maxlength="120" aria-describedby="help"
        placeholder="請輸入照片連結網址" value="{{restaurant.image}}">
      </div>
    </div>
    <div class="add-btn mt-4 d-flex justify-content-center">
      <button class="add submit" type="submit">送出</button>
      <button class="back"><a href="/details/{{id}}">回上頁</a></button>
      <button class="back"><a href="/">回首頁</a></button>
    </div>
  </form>
</div>